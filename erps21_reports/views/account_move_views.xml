<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_out_invoice_tree" model="ir.ui.view">
        <field name="name">account.out.move.tree.erps21</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="l10n_cl_dte_status"
                           widget="badge"
                           decoration-success="l10n_cl_dte_status == 'accepted'"
                           decoration-warning="l10n_cl_dte_status == 'objected'"
                           decoration-danger="l10n_cl_dte_status == 'rejected'"
                           decoration-info="not l10n_cl_dte_status in ['accepted','objected','rejected']"
                           optional="hide"/>
                </field>
        </field>
    </record>
    <record id="view_in_invoice_tree" model="ir.ui.view">
        <field name="name">account.in.move.tree.erps21</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="l10n_cl_dte_acceptation_status"
                           widget="badge"
                           decoration-success="l10n_cl_dte_acceptation_status == 'accepted'"
                           decoration-danger="l10n_cl_dte_acceptation_status == 'claimed'"
                           decoration-info="not l10n_cl_dte_acceptation_status in ['accepted','claimed']"
                           optional="hide"/>
                </field>
        </field>
    </record>
</odoo>
