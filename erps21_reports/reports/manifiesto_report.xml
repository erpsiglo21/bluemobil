<?xml version="1.0"?>
<odoo>
    <template id="tanax_manifiesto_report">
        <t t-call="web.html_container">
            <div class="page">
                <h2 style="text-align: center">
                    <span t-esc="transportista"/>
                </h2>
                <table class="table table-sm" name="stock_move_table">
                    <thead>
                        <tr>
                            <th name="th_sm_oc"><strong>OC Cliente</strong></th>
                            <th name="th_sm_ov"><strong>Orden de Venta</strong></th>
                            <th name="th_sm_inv"><strong>Factura</strong></th>
                            <th name="th_sm_inv_date"><strong>Fecha Factura</strong></th>
                            <th name="th_sm_ori"><strong>Origen</strong></th>
                            <th name="th_sm_des"><strong>Destino</strong></th>
                            <th name="th_sm_cli"><strong>cliente</strong></th>
                            <th name="th_sm_dir"><strong>Direccion</strong></th>
                            <th name="th_sm_qty"><strong>Cantidad</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="vals" t-as="inv">
                            <td>
                                <span t-esc="inv['client_order_ref']"/>
                            </td>
                            <td>
                                <span t-esc="inv['sale_order']"/>
                            </td>
                            <td>
                                <span t-esc="inv['invoice_number']"/>
                            </td>
                            <td>
                                <span t-esc="inv['invoice_date']"/>
                            </td>
                            <td>
                                <span t-esc="inv['origin']"/>
                            </td>
                            <td>
                                <span t-esc="inv['destination']"/>
                            </td>
                            <td>
                                <span t-esc="inv['customer']"/>
                            </td>
                            <td>
                                <span t-esc="inv['address']"/>
                            </td>
                            <td>
                                <span t-esc="inv['qty']"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <record id="action_manifiesto_report" model="ir.actions.report">
        <field name="name">Manifiesto</field>
        <field name="model">tanax.manifiesto.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tanax_reportes.tanax_manifiesto_report</field>
        <field name="print_report_name">'Manifiesto'</field>
    </record>
</odoo>